http {
    include       /etc/nginx/mime.types;
    default_type  application/octet-stream;

    upstream app-hosts {
        {% if (disabled_host | default('')) != 'appserver1' %}
            server {{ hostvars[groups['myappserver'][0]].ansible_host }}:8000;
        {% endif %}
        {% if (disabled_host | default('')) != 'appserver2' %}
            server {{ hostvars[groups['myappserver'][1]].ansible_host }}:8000;
        {% endif %}
    }



    access_log /var/log/nginx/access.log;
    error_log /var/log/nginx/error.log;

    server {
        listen 80;
        server_name {{ domain_name }} www.{{ domain_name }};
        return 301 https://$server_name$request_uri;
    }

    server {
        listen 443 ssl;
        server_name {{ domain_name }} www.{{ domain_name }};

        add_header Strict-Transport-Security "max-age=31536000; includeSubDomains";

        ssl_certificate /etc/letsencrypt/live/{{ domain_name }}/cert.pem;
        ssl_certificate_key /etc/letsencrypt/live/{{ domain_name }}/privkey.pem;
        ssl_protocols TLSv1 TLSv1.1 TLSv1.2;

        location / {
            proxy_pass http://app-hosts;
        }

        location /grafana/ {
            proxy_pass http://{{ hostvars[groups['mymonitoring'][0]].ansible_host }}:3000/;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-Host $host;
            proxy_set_header X-Forwarded-Server $host;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        }
        
    }

    
}
